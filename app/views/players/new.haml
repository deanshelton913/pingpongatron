%h2
  Sign Up
= content_for(:head){ javascript_tag 'image_capture' }
= form_for @player, url: { action: "create" } do |f|
  .grid
    .unit.half
      = f.text_field :name, placeholder: "Your Awesome Name"
    .unit.one-quarter
      %label.button.camera
        %span
          %img{src: asset_path('camera.svg'), alt: 'take a photo'}
          = f.file_field :avatar, id:'take-picture', class: 'custom-file-input', accept:"image/*", name:'player[avatar]'
      %a.button{href:"#",onclick:'$("#new_player").submit();'}
        Sign Up

    .unit.one-quarter